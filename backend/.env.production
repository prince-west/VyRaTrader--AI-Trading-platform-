# VyRaTrader Production Environment Variables
# Copy this file to .env and update with your production values

# ===========================================
# CRITICAL SECURITY SETTINGS (REQUIRED)
# ===========================================
SECRET_KEY=your-super-secure-secret-key-here-min-32-chars
SANDBOX_WEBHOOK_SECRET=your-webhook-secret-key-here
JWT_SECRET=your-jwt-secret-key-here-min-32-chars
REFRESH_TOKEN_HASH_KEY=your-hmac-secret-key-here-min-32-chars

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql+asyncpg://username:password@host:port/database_name
REDIS_URL=redis://username:password@host:port/database

# ===========================================
# APPLICATION SETTINGS
# ===========================================
ENV=production
DEBUG=false
PROJECT_NAME=VyRaTrader
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# ===========================================
# AI SERVICES
# ===========================================
OPENAI_API_KEY=your-openai-api-key-here

# ===========================================
# MARKET DATA API KEYS (OPTIONAL)
# ===========================================
# Core Crypto APIs
COINMARKETCAP_API_KEY=your-cmc-key
CRYPTOCOMPARE_API_KEY=your-cryptocompare-key
MESSARI_API_KEY=your-messari-key
ETHERSCAN_API_KEY=your-etherscan-key

# Core Stock APIs
ALPHAVANTAGE_API_KEY=your-alpha-vantage-key
TWELVEDATA_API_KEY=your-twelve-data-key
FMP_API_KEY=your-fmp-key
FINNHUB_API_KEY=your-finnhub-key
POLYGON_API_KEY=your-polygon-key
EODHD_API_KEY=your-eodhd-key
RAPIDAPI_KEY=your-rapidapi-key
IEX_CLOUD_API_KEY=your-iex-cloud-key
TIINGO_API_KEY=your-tiingo-key

# Core Forex APIs
EXCHANGERATE_API_KEY=your-exchangerate-key
CURRENCYLAYER_API_KEY=your-currencylayer-key
OPENEXCHANGERATES_API_KEY=your-openexchangerates-key

# Core Commodities APIs
COMMODITIES_API_KEY=your-commodities-key
API_NINJAS_KEY=your-api-ninjas-key
TRADING_ECONOMICS_KEY=your-trading-economics-key

# Core News APIs
NEWSAPI_KEY=your-newsapi-key

# Core Macro APIs
FRED_API_KEY=your-fred-key

# ===========================================
# PAYMENT GATEWAYS (OPTIONAL)
# ===========================================
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
BINANCEPAY_API_KEY=your-binancepay-key
BINANCEPAY_API_SECRET=your-binancepay-secret

# ===========================================
# BROKER INTEGRATIONS (OPTIONAL)
# ===========================================
OANDA_API_TOKEN=your-oanda-token
BINANCE_API_KEY=your-binance-key
BINANCE_API_SECRET=your-binance-secret
BINANCE_TESTNET=false

# ===========================================
# COLLECTION SETTINGS
# ===========================================
COLLECTION_INTERVAL=30
